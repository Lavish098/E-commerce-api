{
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "public"
        },
        {
            "src": "/",
            "dest": "public"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        }
    ]
}